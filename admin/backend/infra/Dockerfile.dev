# Development Dockerfile for KarlCam Admin Backend
FROM python:3.11-slim

WORKDIR /app

# Copy requirements first for better caching
COPY admin/backend/requirements.txt ./admin/backend/

# Install dependencies
RUN pip install --no-cache-dir -r admin/backend/requirements.txt

# Copy centralized database module
COPY db/ ./db/

# Copy application
COPY admin/backend/ ./admin/backend/

# Environment for development
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Set working directory to admin/backend module
WORKDIR /app/admin/backend

# Run with uvicorn in development mode with auto-reload
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8001", "--reload"]