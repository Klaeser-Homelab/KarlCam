# KarlCam Collector Environment Configuration
# Copy this file to .env and update with your settings

# ===============================
# REQUIRED: Gemini API Key
# ===============================
GEMINI_API_KEY=your-gemini-api-key-here

# ===============================
# Database Configuration
# ===============================
# Cloud SQL connection string
DATABASE_URL=postgresql://user:password@/karlcam?host=/cloudsql/your-project:region:instance-id

# ===============================
# Storage Configuration
# ===============================
# Cloud storage for images (production mode)
USE_CLOUD_STORAGE=true
OUTPUT_BUCKET=karlcam-fog-data
DATA_DIR=/app/data

# Local storage (for development - uncomment to override)
# USE_CLOUD_STORAGE=false
# DATA_DIR=./test_data

# ===============================
# Collection Settings  
# ===============================
# How often to collect (handled by CronJob in production)
COLLECTION_INTERVAL_MINUTES=10

# ===============================
# Webcam URLs (optional override)
# ===============================
# If you want to test with specific webcams, you can add them here
# The collector will use these if provided, otherwise defaults to Golden Gate Bridge
# WEBCAM_1_NAME=Golden Gate Bridge
# WEBCAM_1_URL=https://goldengatebridge.org/cameras/south.jpg
# WEBCAM_1_ID=golden-gate

# WEBCAM_2_NAME=Bay Bridge
# WEBCAM_2_URL=https://www.baybridgeinfo.org/sites/default/files/webcam/cam1.jpg  
# WEBCAM_2_ID=bay-bridge

# ===============================
# Logging Level
# ===============================
LOG_LEVEL=INFO

# ===============================
# Development Settings
# ===============================
# Set to true to save extra debug info
DEBUG_MODE=false

# Mock Gemini responses for testing (when true, doesn't call real API)
MOCK_GEMINI=false