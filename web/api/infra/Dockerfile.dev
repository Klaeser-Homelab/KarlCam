# Development Dockerfile for KarlCam API
FROM python:3.11-slim

WORKDIR /app

# Copy requirements first for better caching
COPY web/api/requirements.txt ./web/api/

# Install dependencies from requirements.txt
RUN pip install --no-cache-dir -r web/api/requirements.txt

# Copy centralized database module
COPY db/ ./db/

# Copy application
COPY web/api/ ./web/api/

# Environment for development
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Set working directory to api module
WORKDIR /app/web/api

# Run with uvicorn in development mode with auto-reload
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]